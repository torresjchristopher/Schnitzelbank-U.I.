rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // üèõÔ∏è PROTOTYPE MODE: FULL PERMISSIVE ACCESS
    // This allows the app to perform collection queries and subcollection access 
    // without complex rule matching during development.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
