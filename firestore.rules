rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Allow the app to look up Family Slugs
    match /families/{slug} {
      allow read: if true; 
      allow write: if false; 
    }

    // 2. Allow access to the Artifact Trees
    match /trees/{treeId}/{document=**} {
      allow read, write: if true;
    }

    // 3. Messaging Rules
    // Allow reading and writing to chats if the user's family slug is in the participants list
    // Note: Since we are using simple passwords and slugs for identity, 
    // we allow public read/write but recommend a simple 'participant' check if we had full Auth.
    match /chats/{chatId}/{document=**} {
      allow read, write: if true; 
    }
  }
}