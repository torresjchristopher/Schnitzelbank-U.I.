rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Allow the app to look up Family Slugs
    match /families/{slug} {
      allow read: if true; 
      allow write: if false; 
    }

    // 2. Allow access to the Artifact Trees
    match /trees/{treeId}/{document=**} {
      allow read, write: if true;
    }

    // 3. Messaging Rules
    match /chats/{chatId}/{document=**} {
      allow read, write: if true; 
    }

    // 4. Collection Group Rules for Artifact Annotations
    match /{path=**}/messages/{messageId} {
      allow read, write: if true;
    }
  }
}